<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_grid_test"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_grid_name"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="128dp"
        android:text="名称"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/img_grid_test"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_grid_test"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_grid_desc"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:text="菜系"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_grid_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_grid_name" />
</androidx.constraintlayout.widget.ConstraintLayout>