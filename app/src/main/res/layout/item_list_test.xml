<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FBD8">

    <ImageView
        android:id="@+id/img_item_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_item_list_name"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="名称"
        android:textSize="35sp"
        app:layout_constraintStart_toEndOf="@+id/img_item_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_item_list_desc"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/txt_item_list_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_list_name" />


</androidx.constraintlayout.widget.ConstraintLayout>